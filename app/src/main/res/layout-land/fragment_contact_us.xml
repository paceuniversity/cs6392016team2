<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL RAWLE"
        android:id="@+id/jonesbtn"
        android:layout_gravity="right|bottom"
        android:layout_below="@+id/tonybtn"
        android:layout_alignEnd="@+id/gregbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAWLE JONES"
        android:id="@+id/jonespic"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/tonypic"
        android:layout_alignEnd="@+id/gregpic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL TONY"
        android:id="@+id/tonybtn"
        android:layout_gravity="right|center_vertical"
        android:layout_alignTop="@+id/tonypic"
        android:layout_alignStart="@+id/gregbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Chen"
        android:id="@+id/tonypic"
        android:layout_gravity="center"
        android:layout_below="@+id/gregpic"
        android:layout_alignEnd="@+id/gregpic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Greg"
        android:id="@+id/gregbtn"
        android:layout_gravity="right|top"
        android:layout_alignTop="@+id/gregview"
        android:layout_toStartOf="@+id/gregview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greg Goldberg"
        android:id="@+id/gregpic"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:layout_alignTop="@+id/gregbtn"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gregview"
        android:layout_gravity="left|top"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>